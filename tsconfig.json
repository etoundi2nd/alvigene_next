{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "carousel.js",
    "src/app/components/products/productList.js",
    "src/app/components/navbar.js",
    "src/app/components/getProduct.js",
    "src/app/components/footer.js",
    "src/app/components/carousel.js",
    "src/app/queries/products/getProduct.js",
    "src/app/queries/products/getProductList.js",
    "src/app/utils/services.js",
    "src/app/components/service.js"
  ],
  "exclude": ["node_modules"]
}
